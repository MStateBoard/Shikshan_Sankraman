<style>
    @@media screen and (max-width: 991px) {
        .container .transact_box {
            border-right: none;
            border-bottom: dotted;
        }
    }

    .row h3 {
        font-size: 18px;
        color: #06213F;
        font-weight: 600;
        margin: 2px;
        line-height: 24px;
        border-bottom: 0px solid;
    }

    .container h6 {
        border: none;
        border-bottom: 0px solid;
        margin: 0 0 5px 0;
        color: black;
        font-weight: 600;
    }

    .transact_box {
        /*margin: 11px 0px;*/
        border-right: dashed;
        margin-right: 40px;
        margin-left: 30px;
    }

    .last_transact_box {
        /*margin: 11px 0px*/;
